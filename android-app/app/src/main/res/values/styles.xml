<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fileListItem">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="fileBigItem">
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="fileItem">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="bigFileItem">
        <item name="android:paddingEnd">@dimen/smallPadding</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="dirInfoLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">@dimen/mediumPadding</item>
    </style>
    <style name="dirInfoValue">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">@dimen/mediumPadding</item>
    </style>

</resources>
