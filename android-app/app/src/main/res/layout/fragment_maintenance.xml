<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/mediumPadding"
        style="@style/TextAppearance.AppCompat.Medium"
        android:text="@string/statistics_title"
        />
    <TextView
        android:id="@+id/used_space"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/mediumPadding"
        tools:text="Used 4.5GB of 8.0GB"
        />
    <ProgressBar
        android:id="@+id/user_space_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/used_space"
        app:layout_constraintStart_toStartOf="@id/used_space"
        app:layout_constraintEnd_toEndOf="@id/used_space"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        tools:max="100"
        tools:progress="35"
        />

    <TextView
        android:id="@+id/count_size_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_space_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/mediumPadding"
        android:paddingBottom="@dimen/smallPadding"
        android:text="@string/count_size_title"
        />
    <com.darekbx.sambaclient.ui.maintenance.CountPieChart
        android:id="@+id/count_chart"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/count_size_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/size_chart"
        android:padding="@dimen/mediumPadding"
        />
    <com.darekbx.sambaclient.ui.maintenance.SizePieChart
        android:id="@+id/size_chart"
        android:layout_width="0dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/count_size_title"
        app:layout_constraintStart_toEndOf="@id/count_chart"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/mediumPadding"
        />
    
    <View
        android:id="@+id/type_images_space"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="@id/type_images"
        app:layout_constraintBottom_toBottomOf="@id/type_images"
        app:layout_constraintEnd_toStartOf="@id/type_images"
        android:background="@color/chart_image"
        />
    <TextView
        android:id="@+id/type_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/count_chart"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/largePadding"
        android:paddingStart="@dimen/tinyPadding"
        tools:text="Images 54 (2.1GB)"
        />

    <View
        android:id="@+id/type_movies_space"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="@id/type_movies"
        app:layout_constraintBottom_toBottomOf="@id/type_movies"
        app:layout_constraintEnd_toStartOf="@id/type_movies"
        android:background="@color/chart_movie"
        />
    <TextView
        android:id="@+id/type_movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/type_images"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/largePadding"
        android:paddingStart="@dimen/tinyPadding"
        tools:text="Movies 54 (2.1GB)"
        />
    
    <View
        android:id="@+id/type_docs_space"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="@id/type_docs"
        app:layout_constraintBottom_toBottomOf="@id/type_docs"
        app:layout_constraintEnd_toStartOf="@id/type_docs"
        android:background="@color/chart_doc"
        />
    <TextView
        android:id="@+id/type_docs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/type_movies"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/largePadding"
        android:paddingStart="@dimen/tinyPadding"
        tools:text="Documents 54 (2.1GB)"
        />
    
    <View
        android:id="@+id/type_archives_space"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="@id/type_archives"
        app:layout_constraintBottom_toBottomOf="@id/type_archives"
        app:layout_constraintEnd_toStartOf="@id/type_archives"
        android:background="@color/chart_archive"
        />
    <TextView
        android:id="@+id/type_archives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/type_docs"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/largePadding"
        android:paddingStart="@dimen/tinyPadding"
        tools:text="Archives 54 (2.1GB)"
        />

    <View
        android:id="@+id/type_others_space"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="@id/type_others"
        app:layout_constraintBottom_toBottomOf="@id/type_others"
        app:layout_constraintEnd_toStartOf="@id/type_others"
        android:background="@color/chart_other"
        />
    <TextView
        android:id="@+id/type_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/type_archives"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/largePadding"
        android:paddingStart="@dimen/tinyPadding"
        tools:text="Others 54 (2.1GB)"
        />

    <TextView
        android:id="@+id/biggest_files_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/type_others"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/mediumPadding"
        android:paddingTop="@dimen/smallPadding"
        android:paddingBottom="@dimen/smallPadding"
        android:text="@string/biggest_files_title"
        />

    <ListView
        android:id="@+id/biggest_files"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/biggest_files_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        />

    <include
        android:id="@+id/loading_layout"
        layout="@layout/layout_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>
